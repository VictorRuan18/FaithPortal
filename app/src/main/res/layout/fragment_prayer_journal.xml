<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.PrayerJournalFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_prayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your prayer here" />

        <Button
            android:id="@+id/button_add_prayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Prayer" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_prayers"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>